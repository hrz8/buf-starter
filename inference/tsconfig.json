{
  "compilerOptions": {
    // Target and Module
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    // Output
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    
    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    
    // Module Resolution
    "resolveJsonModule": true,
    "allowJs": false,
    "allowImportingTsExtensions": false,
    
    // Emit
    "declaration": false,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    
    // Advanced
    "skipLibCheck": true,
    "isolatedModules": true,
    
    // Node.js specific
    "types": ["node"],
    "lib": ["ES2022"]
  },
  "include": [
    "src/**/*",
    "gen/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true
  }
}
